# replace with your EE
ARG EE_BASE_IMAGE=towerpah.shadowman.dev/shadowmanee:latest
FROM $EE_BASE_IMAGE

LABEL ansible-execution-environment=true

USER root
WORKDIR /tmp

COPY shells /etc/shells
COPY .bashrc /home/runner/.bashrc

# Use if you want to add in ansible developer tools like ansible-molecule and ansible-creator
RUN /usr/bin/microdnf install ncurses python3.11 python3.11-pip -y
RUN /usr/bin/python3.11 -m pip install --no-cache-dir ansible-dev-tools ansible-core\<2.19

RUN printf "export CONTAINER_NAME=ansibleee\n" >> /home/runner/.bashrc
RUN mkdir /.ansible && mkdir /.ansible/roles && mkdir /.ansible/collections && mkdir /.ansible/modules && touch /.ansible/.lock

RUN chgrp -R 0 /home && chmod -R g=u /etc/passwd /etc/group /home /.ansible/.lock
